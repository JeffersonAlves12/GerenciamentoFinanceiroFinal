@page "/Categorias/Atualizar/{id:long}"
@model FinanceiroRazorTDS.Pages.Categorias.Atualizar

@{
    ViewData["Title"] = "Atualizar Categoria";
}

<h2>@ViewData["Title"]</h2>

<div class="container mt-5">
    <form method="post">
        <div class="form-group">
            <label asp-for="Categoria.NomeCategoria" class="control-label">Nome da Categoria</label>
            <input asp-for="Categoria.NomeCategoria" class="form-control" />
            <span asp-validation-for="Categoria.NomeCategoria" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Categoria.IconeCategoria" class="control-label">Ícone da Categoria</label>
            <input asp-for="Categoria.IconeCategoria" class="form-control" />
            <span asp-validation-for="Categoria.IconeCategoria" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Categoria.DescricaoCategoria" class="control-label">Descrição</label>
            <textarea asp-for="Categoria.DescricaoCategoria" class="form-control"></textarea>
            <span asp-validation-for="Categoria.DescricaoCategoria" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Atualizar</button>
        <a asp-page="/Categorias/Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
