@page "/Eventos/Atualizar/{id:int}"
@model FinanceiroRazorTDS.Pages.Eventos.Atualizar

@{
    ViewData["Title"] = "Atualizar Evento";
}

<h1>@ViewData["Title"]</h1>

<form method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Evento.Id" />
    
    <div class="form-group">
        <label asp-for="Evento.Tipo">Tipo de Evento</label>
        <select asp-for="Evento.Tipo" asp-items="Html.GetEnumSelectList<TipoEvento>()" class="form-control"></select>
    </div>

    <div class="form-group">
        <label asp-for="Evento.DataConsolidacao">Data de Consolidação</label>
        <input asp-for="Evento.DataConsolidacao" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Evento.Valor">Valor</label>
        <input asp-for="Evento.Valor" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Evento.Status">Status</label>
        <select asp-for="Evento.Status" asp-items="Html.GetEnumSelectList<StatusEvento>()" class="form-control"></select>
    </div>

    <div class="form-group">
        <label>Foto Atual</label>
        <div>
            <img src="@Url.Content("~/uploads/" + Model.Evento.FotoPath)" alt="Imagem do Evento" width="100px"/>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Evento.FotoPath">Alterar Imagem</label>
        <input type="file" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Evento.UsuarioId">Usuário</label>
        <select asp-for="Evento.UsuarioId" asp-items="Model.UsuariosSelectList" class="form-control"></select>
    </div>

    <button type="submit" class="btn btn-primary">Atualizar</button>
</form>
