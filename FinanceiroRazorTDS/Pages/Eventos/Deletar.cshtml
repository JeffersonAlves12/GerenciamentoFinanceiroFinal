@page "/Eventos/Deletar/{id:int}"
@model FinanceiroRazorTDS.Pages.Eventos.Deletar
@{
    ViewData["Title"] = "Deletar";
}

<h1>Deletar Evento</h1>

@if (Model.ErrorMessage != null)
{
    <div class="alert alert-danger" role="alert">
        @Model.ErrorMessage
    </div>
}

<h3>Tem certeza de que deseja deletar o evento "@Model.EventoModel.Tipo"?</h3>

<form method="post">
    <input type="hidden" asp-for="EventoModel.Id" />
    <input type="submit" value="Deletar" class="btn btn-danger" /> |
    <a asp-page="/Eventos/Index" class="btn btn-secondary">Cancelar</a>
</form>