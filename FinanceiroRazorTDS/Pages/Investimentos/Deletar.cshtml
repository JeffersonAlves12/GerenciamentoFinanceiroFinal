@page
@model FinanceiroRazorTDS.Pages.Investimentos.DeletarModel
@{
    ViewData["Title"] = "Excluir Investimento";
}

<h1>@ViewData["Title"]</h1>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <input type="hidden" asp-for="InvestimentoModel.Id" />

                <div class="alert alert-danger">
                    Tem certeza de que deseja excluir o investimento <strong>@Model.InvestimentoModel.Nome</strong>?
                </div>

                <div class="form-group mt-3">
                    <input type="submit" class="btn btn-danger" value="Excluir">
                    <a asp-page="/Investimentos/Index" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>
